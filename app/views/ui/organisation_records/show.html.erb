<%#
# Show
This view is the template for the show page.
It renders the attributes of a resource,
as well as a link to its edit page.
## Local variables:
- `page`:
  An instance of [Administrate::Page::Show][1].
  Contains methods for accessing the resource to be displayed on the page,
  as well as helpers for describing how each attribute of the resource
  should be displayed.
[1]: http://www.rubydoc.info/gems/administrate/Administrate/Page/Show
%>
<% content_for(:title) { t("administrate.actions.show_resource", name: page.page_title) } %>
<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>
  <div>
    <%= link_to(
      t("administrate.actions.edit_resource", name: page.page_title),
      [:edit, namespace, page.resource],
      class: "button",
    ) if valid_action?(:edit) && show_action?(:edit, page.resource) %>
  </div>
</header>

<h1>Active Assignments</h1>
<div class="nhsuk-table__panel-with-heading-tab">
  <div class="nhsuk-table-container">
    <table class="nhsuk-table">
      <thead class="nhsuk-table__head">
        <tr class="nhsuk-table__row">
          <th class="nhsuk-table__header" scope="col">Assignment ID</th>
          <th class="nhsuk-table__header" scope="col">Name</th>
          <th class="nhsuk-table__header" scope="col">Position</th>
          <th class="nhsuk-table__header" scope="col">Payscale</th>
          <th class="nhsuk-table__header" scope="col">Location</th>
        </tr>
      </thead>
      <tbody class="nhsuk-table__body">
        <% page.resource.active_assignments.includes([:actively_assigned_person, :position, :location]).each do |assignment| %>
        <tr class="nhsuk-table__row">
          <td class="nhsuk-table__cell">
            <%= link_to assignment.id, [:ui, assignment] %>
          </td>
          <td class="nhsuk-table__cell">
            <%= link_to assignment.actively_assigned_person.full_name, [:ui, assignment.actively_assigned_person] %>
          </td>
          <td class="nhsuk-table__cell ">
            <%= link_to assignment.position.send('Position Name').split('|')[1], [:ui, assignment.position] %>
          </td>
          <td class="nhsuk-table__cell ">
            <%= link_to assignment.position.send('Payscale'), [:ui, assignment.position] %>
          </td>
          <td class="nhsuk-table__cell ">
            <%= assignment.location.send('Location Description') %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



<h1>Positions</h1>
<ul>
<% page.resource.positions.each do |position| %>
    <li><%= link_to position.send('Position Name'), [:ui, position] %></li>
<% end %>
</ul>

<div class="nhsuk-table__panel-with-heading-tab">
  <div class="nhsuk-table-container">
    <table class="nhsuk-table">
      <thead class="nhsuk-table__head">
        <tr class="nhsuk-table__row">
          <th class="nhsuk-table__header" scope="col"></th>
          <th class="nhsuk-table__header" scope="col"></th>
        </tr>
      </thead>
      <tbody class="nhsuk-table__body">
        <% page.attributes.each do |attribute| %>
        <tr class="nhsuk-table__row">
          <td class="nhsuk-table__cell">
            <%= t(
              "helpers.label.#{resource_name}.#{attribute.name}",
              default: attribute.name.titleize,
            ) %>
          </td>
          <td class="nhsuk-table__cell ">
            <%= render_field attribute, page: page %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
